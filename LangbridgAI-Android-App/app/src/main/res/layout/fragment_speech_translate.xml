<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Removed "From" and "To" language selection from here -->
        <!-- These are now handled globally in MainActivity -->

        <ImageButton
            android:id="@+id/mic_button"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@drawable/circle_button_background"
            android:contentDescription="Record Voice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to record your voice and translate"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/text_gentle_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transcription"
            android:textSize="16sp"
            android:textColor="@color/text_deep_indigo"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/text_view_transcription_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top|start"
            android:hint="Speech will appear here..."
            android:textColorHint="@color/text_gentle_gray"
            android:textColor="@color/text_dark_contrast"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translation"
            android:textSize="16sp"
            android:textColor="@color/text_deep_indigo"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/text_view_speech_translation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top|start"
            android:hint="Translation will appear here"
            android:textColorHint="@color/text_gentle_gray"
            android:textColor="@color/text_dark_contrast"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_download_speech_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Translation"
            style="@style/Widget.LangbridgAI.Button.Secondary"
            android:layout_marginTop="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>
</ScrollView>
